<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:elevation="5dp"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="16dp"
    tools:context=".ui.auth.compoment.UserAuthenticationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/district_not_match">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutOnlinePaymentDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textViewOnlinePaymentOrderId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_bold"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Order ID: order_P1t5zC2I3qJK75" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentOrderId"
                        tools:text="Amount : â‚¹50" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentCoins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentAmount"
                        tools:text="Coins: 60" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentPaymentMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentCoins"
                        tools:text="Payment Mode: UPI" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentReceipt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentPaymentMode"
                        tools:text="Receipt: MT-6001025603-3508" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:text="Status: Paid"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentReceipt" />

                    <TextView
                        android:id="@+id/textViewOnlinePaymentDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_medium"
                        android:gravity="center_vertical"
                        android:text="Payment Date:"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewOnlinePaymentStatus" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutRefreshPaymentStatusButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/textViewContactSupportButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayoutOnlinePaymentDetails">


                    <TextView
                        android:id="@+id/textViewSearchResultPayButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/ar_one_sans_semi_bold"
                        android:gravity="center"
                        android:text="@string/refresh_status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textViewContactSupportButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlue"
                    android:fontFamily="@font/ar_one_sans_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_8sdp"
                    android:text="@string/contact_support"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/constraintLayoutRefreshPaymentStatusButton"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayoutOnlinePaymentDetails" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>