<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:elevation="0dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_12sdp">

        <View
            android:id="@+id/viewTransition"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_edit_text_round"
            app:layout_constraintBottom_toBottomOf="@id/textViewTransactionMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewTransactionType" />

        <TextView
            android:id="@+id/textViewTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/ar_one_sans_bold"
            tools:text="CREDITED"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@id/viewTransition"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTransactionMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/ar_one_sans_medium"
            tools:text="100 coin credited for referral ."
            android:textColor="@color/darkTextColor"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@id/textViewTransactionCategory"
            app:layout_constraintStart_toEndOf="@id/viewTransition"
            app:layout_constraintTop_toBottomOf="@id/textViewTransactionType" />


        <TextView
            android:id="@+id/textViewTransactionCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ar_one_sans_bold"
            tools:text="REFERRAL"
            android:textColor="@color/blue"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
