<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_divider"
    android:fitsSystemWindows="true"
    tools:context=".ui.auth.compoment.UserAuthenticationActivity"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.auth.compoment.UserAuthenticationActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/constraintLayoutToolbarHome"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorBlue"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_no_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ar_one_sans_bold"
                android:text="Home"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textSize="@dimen/dim_16"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollViewHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            ads:layout_constraintBottom_toTopOf="@id/adViewHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutToolbarHome">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewAppUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:elevation="0dp"
                    android:visibility="gone"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/textViewAppUpdateTextHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:text="App Update"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewAppUpdateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/ar_one_sans_regular"
                            android:text="An important update is available. Please update the app to continue using all features."
                            android:textSize="@dimen/_11sdp"
                            ads:layout_constraintTop_toBottomOf="@id/textViewAppUpdateTextHeader"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />


                        <TextView
                            android:id="@+id/textViewDownloadButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_text_view_round_home"
                            android:backgroundTint="@color/colorBlue"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Download"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dim_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewAppUpdateText" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPushNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:elevation="0dp"
                    ads:layout_constraintTop_toBottomOf="@id/cardViewAppUpdate"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/textViewNotificationTextHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:text="Notification Permission"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewNotificationText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/ar_one_sans_regular"
                            android:text="We need notification permission to send you important updates."
                            android:textSize="@dimen/_11sdp"
                            ads:layout_constraintTop_toBottomOf="@id/textViewNotificationTextHeader"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textViewNotificationButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_text_view_round_home"
                            android:backgroundTint="@color/colorBlue"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Enable Notifications"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dim_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewNotificationText" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSearchHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:elevation="0dp"
                    ads:layout_constraintTop_toBottomOf="@id/cardViewPushNotification"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/textViewSelectDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/bg_text_view_round_home"
                            android:fontFamily="@font/ar_one_sans_medium"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Select District"
                            android:textSize="@dimen/dim_18"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:id="@+id/relativeLayoutSelectBlock"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_text_view_round_home"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewSelectDistrict">

                            <TextView
                                android:id="@+id/textViewSelectBlock"
                                android:layout_width="match_parent"

                                android:layout_height="@dimen/_40sdp"
                                android:layout_toStartOf="@id/imageViewBtnClearBlock"
                                android:fontFamily="@font/ar_one_sans_medium"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:text="Select Block ( Optional )"
                                android:textSize="@dimen/dim_18" />

                            <ImageView
                                android:id="@+id/imageViewBtnClearBlock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:padding="@dimen/_12sdp"
                                android:src="@drawable/round_close_24"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textViewSelectSchool"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_text_view_round_home"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Select School"
                            android:textSize="@dimen/dim_16"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/relativeLayoutSelectBlock" />

                        <ImageView
                            android:id="@+id/imageViewInfoIcon"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/baseline_info_24"
                            app:layout_constraintBottom_toBottomOf="@id/textViewSearchNoteTeacherPost"
                            app:layout_constraintEnd_toStartOf="@id/textViewSearchNote"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textViewSearchNote"
                            app:tint="@color/blue" />


                        <TextView
                            android:id="@+id/textViewSearchNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/ar_one_sans_regular"
                            android:text="Search will be based on your post"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/dim_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageViewInfoIcon"
                            app:layout_constraintTop_toBottomOf="@id/textViewSelectSchool" />


                        <TextView
                            android:id="@+id/textViewSearchNoteTeacherPost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/ar_one_sans_semi_bold"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/dim_12"
                            app:layout_constraintEnd_toStartOf="@id/textViewSearchNoteTeacherPostChange"
                            app:layout_constraintStart_toEndOf="@id/imageViewInfoIcon"
                            app:layout_constraintTop_toBottomOf="@id/textViewSearchNote"
                            tools:text="Assistant Teacher ( Highschool )" />

                        <TextView
                            android:id="@+id/textViewSearchNoteTeacherPostChange"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:fontFamily="@font/ar_one_sans_semi_bold"
                            android:text="Change"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/dim_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewSearchNote" />


                        <TextView
                            android:id="@+id/textViewSearchBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_text_view_round_home"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Search Person"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dim_18"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewSearchNoteTeacherPost" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewActivelyLooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:elevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardViewSearchHome">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_12sdp">


                        <TextView
                            android:id="@+id/textViewActivelyLooking"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:fontFamily="@font/ar_one_sans_medium"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Actively looking for a Mutual Transfer."
                            android:textSize="@dimen/dim_18"
                            app:layout_constraintEnd_toStartOf="@id/switchActivelyLooking"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/textViewActivelyLookingNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/ar_one_sans_regular"
                            android:text="If you disable this option, your profile will not be visible in search results."
                            android:textColor="@color/colorOrangeLight"
                            android:textSize="@dimen/dim_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textViewActivelyLooking" />


                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchActivelyLooking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/ic_right_arrow"
                            app:layout_constraintBottom_toBottomOf="@id/textViewActivelyLooking"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textViewActivelyLooking" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewReferAndEarnHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:elevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardViewActivelyLooking"
                    app:layout_marginBaseline="@dimen/_12sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageViewReferral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/referral_home"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/textViewReferralTextHome"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:fontFamily="@font/ar_one_sans_bold"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:text="Refer &amp; Earn"
                            android:textSize="@dimen/dim_18"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imageViewReferral" />


                        <ImageView
                            android:id="@+id/imageViewGoToReferralPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/ic_right_arrow"
                            app:layout_constraintBottom_toBottomOf="@id/textViewReferralTextHome"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textViewReferralTextHome" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardViewReferAndEarnHome" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/relativeLayoutProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/white" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorAccent" />

        </RelativeLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bgColorDark"
        android:theme="@style/Widget.Design.NavigationView"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/my_drawer_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Follow us on - "
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nav_facebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_facebook" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nav_insta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/insta" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nav_twitter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/youtubr"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/textViewVersionCode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                tools:text="Version - 1.0.0" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>