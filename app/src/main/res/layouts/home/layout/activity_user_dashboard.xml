<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorDark"
    android:fitsSystemWindows="true"
    tools:context=".ui.auth.compoment.UserAuthenticationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/constraintLayoutToolbarHome"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageViewNavBarMenu"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/round_menu_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Home"
                android:textAppearance="@android:style/TextAppearance.Theme"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/dim_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewWallet"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/wallet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutToolbarHome">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/textViewSelectDistrict"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_text_view_round_home"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Select District"
                android:textSize="@dimen/dim_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textViewSelectBlock"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_text_view_round_home"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Select Block"
                android:textSize="@dimen/dim_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSelectDistrict" />


            <TextView
                android:id="@+id/textViewSelectSchool"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_text_view_round_home"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Select School"
                android:textSize="@dimen/dim_16"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSelectBlock" />

            <ImageView
                android:id="@+id/imageViewInfoIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintBottom_toBottomOf="@id/textViewSearchNoteTeacherPost"
                app:layout_constraintEnd_toStartOf="@id/textViewSearchNote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewSearchNote"
                app:tint="@color/blue" />


            <TextView
                android:id="@+id/textViewSearchNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ar_one_sans_regular"
                android:text="Search will be based on your post"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dim_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewInfoIcon"
                app:layout_constraintTop_toBottomOf="@id/textViewSelectSchool" />


            <TextView
                android:id="@+id/textViewSearchNoteTeacherPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ar_one_sans_semi_bold"
                android:text="Assistant Teacher ( LP )"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dim_12"
                app:layout_constraintEnd_toStartOf="@id/textViewSearchNoteTeacherPostChange"
                app:layout_constraintStart_toEndOf="@id/imageViewInfoIcon"
                app:layout_constraintTop_toBottomOf="@id/textViewSearchNote" />

            <TextView
                android:id="@+id/textViewSearchNoteTeacherPostChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ar_one_sans_semi_bold"
                android:text="Change"
                android:textColor="@color/blue"
                android:textSize="@dimen/dim_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewSearchNoteTeacherPost"
                app:layout_constraintTop_toBottomOf="@id/textViewSearchNote" />


            <TextView
                android:id="@+id/textViewSearchBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_text_view_round_home"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Search Person"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSearchNoteTeacherPost" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>