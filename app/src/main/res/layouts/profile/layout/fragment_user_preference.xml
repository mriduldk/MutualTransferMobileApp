<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:src="@drawable/round_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ar_one_sans_bold"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="Preferences"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewBackButton">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="200dp">


                <LinearLayout
                    android:id="@+id/linearLayoutFirstPreferenceDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/ar_one_sans_bold"
                        android:text="Select 1st Preference District"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <AutoCompleteTextView
                        android:id="@+id/spinnerFirstPreferenceDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_text_round"
                        android:completionThreshold="0"
                        android:fontFamily="@font/ar_one_sans_regular"
                        android:gravity="top"
                        android:hint="Select District"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:textColor="@color/color_text"
                        android:textColorHint="@color/color_text_sub"
                        android:textSize="@dimen/dim_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSecondPreferenceDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutFirstPreferenceDistrict">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/ar_one_sans_bold"
                        android:text="Select 2nd Preference District"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <AutoCompleteTextView
                        android:id="@+id/spinnerSecondPreferenceDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_text_round"
                        android:completionThreshold="0"
                        android:fontFamily="@font/ar_one_sans_regular"
                        android:gravity="top"
                        android:hint="Select District"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:textColor="@color/color_text"
                        android:textColorHint="@color/color_text_sub"
                        android:textSize="@dimen/dim_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutThirdPreferenceDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutSecondPreferenceDistrict">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/ar_one_sans_bold"
                        android:text="Select 3rd Preference District"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <AutoCompleteTextView
                        android:id="@+id/spinnerThirdPreferenceDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_text_round"
                        android:completionThreshold="0"
                        android:fontFamily="@font/ar_one_sans_regular"
                        android:gravity="top"
                        android:hint="Select District"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:textColor="@color/color_text"
                        android:textColorHint="@color/color_text_sub"
                        android:textSize="@dimen/dim_14" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewPreferredDistrictText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/ar_one_sans_semi_bold"
                    android:text="Select the district you want to transfer to."
                    android:textColor="@color/blue"
                    android:textSize="@dimen/dim_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutThirdPreferenceDistrict" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewPreferredDistrictText">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ar_one_sans_semi_bold"
                        android:text="@string/preferred_district_red"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dim_16" />


                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveDistrictPreference"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/color_1"
        android:fontFamily="@font/ar_one_sans_semi_bold"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayoutProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/white" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorAccent" />

    </RelativeLayout>


</RelativeLayout>